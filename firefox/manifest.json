{
    "manifest_version": 2,
    "name": "Floatplane Enhancer",
    "version": "2.4",
    "description": "Enhances the Floatplane experience",
    "permissions": [
      "activeTab",
      "storage",
      "*://floatplane.com/*",
      "*://www.floatplane.com/*",
      "*://beta.floatplane.com/*",
      "*://status.floatplane.com/*",
      "*://*.live-video.net/*",
      "*://api.pollsplane.com/*"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": [
          "*://floatplane.com/*",
          "*://www.floatplane.com/*",
          "*://beta.floatplane.com/*",
          "*://status.floatplane.com/*",
          "*://*.live-video.net/*"
        ],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "/gui/popup.html"
    },
    "web_accessible_resources": [
      "/darkmode-css/dark-theme.css",
      "/darkmode-css/status-dark-theme.css",
      "/features/timestamp.js",
      "/features/autocaption.js",
      "/features/is_live_watcher.js",
      "/features/live_polls.js",
      "/features/darkmode_fix_links.js"
    ],
    "icons": {
      "96": "icons/icon96.png",
      "128": "icons/icon128.png"
    },
    "applications": {
      "gecko": {
        "id": "floatplaneenhancer@furrydev.xyz"
      }
    }
}